{
  "name": "mubarak-way-unified",
  "version": "1.0.0",
  "private": true,
  "description": "Unified Islamic Digital Platform - Quran, Library, Prayer Learning",
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "build": "npm run build --workspaces",
    "build:frontend": "npm run build --workspace=frontend",
    "build:backend": "npm run build --workspace=backend",
    "lint": "npm run lint --workspaces",
    "type-check": "npm run type-check --workspaces",
    "test": "npm run test --workspaces",
    "clean": "rm -rf node_modules frontend/node_modules backend/node_modules shared/node_modules frontend/dist backend/dist",
    "version:bump": "node scripts/bump-version.js",
    "version:setup": "bash scripts/setup-hooks.sh",
    "postinstall": "bash scripts/setup-hooks.sh 2>/dev/null || true"
  },
  "keywords": [
    "quran",
    "islamic",
    "prayer",
    "library",
    "telegram-miniapp",
    "react",
    "typescript"
  ],
  "author": "MubarakWay Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "sharp": "^0.34.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
