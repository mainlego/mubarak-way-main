# Server Configuration
NODE_ENV=production
PORT=10000
ALLOWED_ORIGINS=https://your-frontend.onrender.com,https://web.telegram.org

# Mock Data (set to false for production)
USE_MOCK_DATA=false

# MongoDB Atlas
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
WEBAPP_URL=https://your-frontend.onrender.com

# JWT
JWT_SECRET=your_super_secret_jwt_key_min_32_chars
JWT_EXPIRES_IN=7d

# AI Services
# OpenAI (GPT-4) - Required for AI Chat
OPENAI_API_KEY=sk-your_openai_api_key

# Anthropic (Claude AI) - Optional
ANTHROPIC_API_KEY=sk-ant-api03-your_api_key

# Quran.com OAuth2
QURAN_COM_CLIENT_ID=your_client_id
QURAN_COM_CLIENT_SECRET=your_client_secret
QURAN_COM_ENDPOINT=https://oauth2.quran.foundation

# Elasticsearch (optional)
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_API_URL=https://bot.e-replika.ru
ELASTICSEARCH_API_TOKEN=your_token_here

# Redis (optional, for caching)
REDIS_URL=redis://localhost:6379

# Cache Settings
CACHE_TTL=3600

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AI_MAX_REQUESTS=10

# Logging
LOG_LEVEL=info
